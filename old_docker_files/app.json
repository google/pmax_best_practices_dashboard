{
    "name": "pmaxdash",
    "env": {
        "OAUTH_CLIENT_ID": {
            "description": "OAuth 2.0 Client ID",
            "required": true,
            "order": 1
          },
        "OAUTH_CLIENT_SECRET": {
            "description": "OAuth 2.0 Client Secret",
            "required": true,
            "order": 2
        },
        "REFRESH_TOKEN": {
            "description": "Refresh token created for this project",
            "required" : true,
            "order": 3
        },
        "DEVELOPER_TOKEN": {
            "description": "Google Ads Developer token",
            "required" : true,
            "order": 4
        },
        "MCC_ID": {
            "description": "Your Google Ads MCC account ID",
            "required" : true,
            "order": 5
        } 
    },
    "options": {
      "allow-unauthenticated": true,
      "memory": "4096Mi",
      "cpu": "2"
    },
    "build": {
        "skip": false
      },
    "hooks": {
      "prebuild": {
        "commands": ["chmod 777 ./setup/setup_config.sh", "./setup/setup_config.sh"]
      },
      "postcreate": {
        "commands": ["chmod 777 ./setup/setup_cloud_scheduling.sh", "./setup/setup_cloud_scheduling.sh"]
      }
    }
  }
